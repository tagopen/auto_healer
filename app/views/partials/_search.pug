section#search.search
  .container
    .row
      .col-xs-12
        h2.heading Поиск запчастей в 3 шага
    form.contactForm(name='Поиск запчастей в 3 шага', method='post', action='./mail/mail.php', novalidate)
      .row
        .col-xs-12.col-sm-6
          .search__item
            .search__label
              | Марка:
            .search__group
              //-i.search__select-expand
              input.search__input(name='car_mark', type='text', placeholder='Введите марку автомобиля')
        .col-xs-12.col-sm-6
          .search__item
            .search__label
              | Модель: 
            .search__group
              //-i.search__select-expand
              input.search__input(name='car_model', type='text', placeholder='Введите модель автомобиля')
        .col-xs-12.col-sm-6
          .search__item
            .search__label
              | Поколение:
            .search__group
              //-i.search__select-expand
              input.search__input(name='car_generation', type='text', placeholder='Введите поколение автомобиля')
